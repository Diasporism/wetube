<div id="home-content">
  <div id='home-list'>
    <% @playlists.each do |playlist| %>
      <%= link_to image_tag(playlist[:image]), theater_path(playlist[:slug]), 'data-gif' => playlist[:gif], 'data-image' => playlist[:image] %>
    <% end %>
  </div>

  <div id="home-title">
    <h1>Welcome to WeTube</h1>
    <h3>Join the largest of network of video watching James Blake fans. Watch YouTube videos with your friends. Check out our theaters on the right</h3>
  </div>
</div>